<header class="mb-5">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/questions/">Stack Overflow</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/questions/myquestions">Mine Stack</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/questions/hotquestions">Hot Stack</a>
                    </li><li class="nav-item">
                        <a class="nav-link" href="/questions/post">Post Stack Question</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/login">Prijava</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/register">Registracija</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/profile">Profil</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/users/logout">Odjava</a>
                    </li>
                </ul>
                <form class="form-inline d-flex mx-5" action="" method="get">
                    <input class="form-control mr-sm-2 d-inline" type="search" name="search" placeholder="Search" aria-label="Search">
                    <button class="btn btn-outline-info my-2 my-sm-0  d-inline" type="submit">Search</button>
                </form>
            </div>
        </div>
    </nav>
</header>
<div class="container">
    <div class="row">
        {{#each questions}}
            <div class="col-md-4">
                <div class="card mb-4 box-shadow">
                    <div class="card-body">
                        <h3>{{this.title}}</h3>
                        <p class="card-text">{{this.description}}</p>
                        <p>Tagi: {{#each this.tags}}
                            <span><b>{{this}}</b>,</span>
                        {{/each}}</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/questions/{{this._id}}" class="btn btn-sm btn-outline-secondary">View</a>
                            </div>
                        </div>
                        <p>
                            <small class="text-muted">{{this.datetime}}</small>
                        </p>
                    </div>
                    <div class="card-footer">
                        <img src="/images/{{this.userid.photo_path}}" height="30" width="30" class="rounded"
                             alt="No Photo">
                        {{this.userid.username}}

                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</div>